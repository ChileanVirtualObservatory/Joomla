	<config>		
		<fields name="params">
			<!-- BASIC SETTINGS -->
			<fieldset name="jmbasic" label="PLG_SYSTEM_JMFRAMEWORK_CONFIG_BASIC_SETTINGS_LABEL"></fieldset>
			<!-- TEMPLATE LAYOUT -->
			<fieldset name="jmlayout" label="PLG_SYSTEM_JMFRAMEWORK_CONFIG_TEMPLATE_LAYOUT_LABEL">
				<field name="templateWidthType" type="jmoptiongroups" default="0" label="PLG_SYSTEM_JMFRAMEWORK_CONFIG_TEMPLATE_WIDTH_SELECTOR_LABEL" description="PLG_SYSTEM_JMFRAMEWORK_CONFIG_TEMPLATE_WIDTH_SELECTOR_DESC">
					<group value="0" label="PLG_SYSTEM_JMFRAMEWORK_CONFIG_TEMPLATE_STATIC_LABEL" />
					<group value="1;templateFluidWidth" label="PLG_SYSTEM_JMFRAMEWORK_CONFIG_TEMPLATE_FLUID_LABEL" />
					<field name="templateFluidWidth" type="text" default="1170px" class="unit-remember" label="PLG_SYSTEM_JMFRAMEWORK_CONFIG_TEMPLATE_WIDTH_PERCENT_LABEL" description="PLG_SYSTEM_JMFRAMEWORK_CONFIG_TEMPLATE_WIDTH_PERCENT_DESC" />
				</field>
                <field name="responsiveLayout" type="radio" class="btn-group" default="1" label="PLG_SYSTEM_JMFRAMEWORK_CONFIG_RESPONSIVE_LABEL" description="PLG_SYSTEM_JMFRAMEWORK_CONFIG_RESPONSIVE_DESC">
                    <option value="0">PLG_SYSTEM_JMFRAMEWORK_CONFIG_DISABLE_LABEL</option>
                    <option value="1">PLG_SYSTEM_JMFRAMEWORK_CONFIG_ENABLE_LABEL</option>
                </field>		
			</fieldset>
		</fields>		
